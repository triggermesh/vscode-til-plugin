{
    "name": "vscode-bridge-dl",
    "description": "An extension for TriggerMesh bridge description language",
    "author": "The TriggerMesh Team",
    "license": "MIT",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/TriggerMesh/vscode-bridge-dl"
    },
    "publisher": "???",
    "categories": [],
    "keywords": [],
    "engines": {
        "vscode": "^1.55.0"
    },
    "activationEvents": [
        "onLanguage:hcl"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "hcl",
                "extensions": [
                    ".hcl"
                ],
                "aliases": [
                    "HCL",
                    "hcl"
                ],
                "mimetypes": [
                    "text/hcl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hcl",
                "scopeName": "source.hcl",
                "path": "./syntaxes/hcl.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Default configuration",
            "properties": {
                "vscode-bridge-dl.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "vscode-bridge-dl.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run transpile",
        "transpile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint client server --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^8.2.2",
        "@types/node": "^12.20.13",
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "prettier": "2.3.0",
        "mocha": "^8.4.0",
        "typescript": "^4.2.4"
    }
}
